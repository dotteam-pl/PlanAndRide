@model RoutesCollectionViewModel
@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/home.css">

<div class="container">
    <div class="row">
        <div class="col-12 home-title-text">
            <p class="home-title-text">Recently added routes</p>
        </div>
        <div class="col-12 last-three-tracks">
            <partial name="_Partials/_LastRoutesList" model=@Model></partial>
        </div>
    </div>
</div>

<div class="container-fluid">
        <div class="row">
            <div class="parallax col-12 p-0">
                <div class="container-fluid make-friends-div">
                </div>
                <div class="container parallax-text">Create an account and join your friends rides or make new friends on the rides.</div>
            </div>
        </div>
    </div>

<div class="container">
    <div class="row">
            <div class="col-12 home-title-text">
                <p class="home-title-text nearby-rides">Nearby rides</p>
            </div>
            <div class="col-12 last-three-tracks">
            <partial name="_Partials/_LastRoutesList" model=@Model></partial>
        </div>
    </div>
</div>

<div class="container">
    <div class="row newsletter-and-contact">
        <div class="col-6">
            <div class="col-12 newsletter">
                <form>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Feel free to join our newsletter!</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Write you email address here!">
                        <div id="emailHelp" class="form-text">We'll send you one mail per month.</div>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="newsletterCheck">
                        <label class="form-check-label" for="newsletterCheck">I agree to the processing of my personal data by Plan & Ride Company for marketing purposes.</label>
                    </div>
                    <div class="space">   </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="newsletterCheck">
                        <label class="form-check-label" for="newsletterCheck">I agree to receive commercial information provided by Plan & Ride Company to the e-mail address provided on my own behalf or at the request of its Business Partners.</label>
                    </div>
                    <div class="space">   </div>
                    <div class="button" id="button-animation">
                        <div id="translate"></div>
                        <a class="submit-button" asp-area="" asp-controller="Route" asp-action="Index">Join</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-6 contact">
            <div class="col-12 ">
                <p class="Contact">Contact</p>
                <form>
                    <div class="form-group">
                        <label for="ContactFormControlInput">Email address</label>
                        <input type="email" class="form-control" id="ContactFormControlInputEmail" placeholder="name@example.com">
                    </div>
                    <div class="form-group">
                        <label for="ContactFormControlInput">Your name</label>
                        <input class="form-control" type="text" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="ContactFormControlInput">Your message</label>
                        <textarea class="form-control" id="ContactFormControlTextarea1" rows="3"></textarea>
                    </div>
                    <div class="space">   </div>
                    <div class="button" id="button-animation">
                        <div id="translate"></div>
                        <a class="submit-button" asp-area="" asp-controller="Route" asp-action="Index">Contact</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





