@model RouteDto

@{
    ViewData["Title"] = "Delete";
    var apiKey = ViewData["ApiKey"];
}

<partial name="_Partials/_Header" model="@Model" />
<div class="container">
    <br />
    <h3>Are you sure you want to delete this route?</h3>
    <br />
    <h4>@Model.Name</h4>
    <partial name="_Partials/_Rating" model="@Model" />
    <hr />    
    <div class="row" id="scrollTo">
        <div class="col-xl-5 gx-5 order-2 order-xl-1 route-details-section" style="float:left">
            <partial name="_Partials/_RouteDetails" model="@Model" />
        </div>
        <div id="map" class="col-xl-7 gx-5 order-1 order-xl-2 route-details-section" style="float:left"></div>
    </div>
    <div class="route-details-section">
        <form asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-danger red-button" />
            <a class="btn btn-secondary grey-button" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>
@section Scripts {
<script async type="text/javascript" src='https://maps.googleapis.com/maps/api/js?key=@apiKey&libraries=places,geometry&callback=routeDetails'></script>
<script>
    $('document').ready(showStarRatingForSingleRoute());
</script>
<script>
    $(document).ready(function () {
        $('html, body').animate({
            scrollTop: $("#scrollTo").offset().top
        }, 1);
    });
    </script>
}