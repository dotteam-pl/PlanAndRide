    <h4>Route</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="StartingPosition"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.StartingPosition
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="DestinationPosition"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.DestinationPosition
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="AverageScore"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.AverageScore
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Description"></label>
        </dt>
