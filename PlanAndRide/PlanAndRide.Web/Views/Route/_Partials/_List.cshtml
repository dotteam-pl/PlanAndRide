@model RouteViewsModel

<h1>Routes</h1>

<p>
    <a asp-action="Create">Create New Route</a>
</p>
<form asp-action="Search" method="get">
    <div class="input-group">
        <div class="form-outline">
            <input type="search" asp-for="@Model.RouteName" placeholder="Name" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i>
        </button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="@Model.Routes.First().Name"></label>
            </th>
            <th>
                <label asp-for="@Model.Routes.First().StartingPosition"></label>
            </th>
            <th>
                <label asp-for="@Model.Routes.First().DestinationPosition"></label>
            </th>
            <th>
                <label asp-for="@Model.Routes.First().AverageScore"></label>
            </th>
            <th>
                <label asp-for="@Model.Routes.First().Description"></label>
            </th>
            <th>
                <label asp-for="@Model.Routes.First().ShareRoute"></label>
            </th>
            <th>
                <label asp-for="@Model.Routes.First().IsPrivate"></label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Routes)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.StartingPosition
                </td>
                <td>
                    @item.DestinationPosition
                </td>
                <td>
                    @item.AverageScore
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.ShareRoute
                </td>
                <td>
                    @item.IsPrivate
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>