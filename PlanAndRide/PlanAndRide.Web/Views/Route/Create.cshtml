@model RouteDto

@{
    ViewData["Title"] = "Create";
    var apiKey = ViewData["ApiKey"];
}

<partial name="_Partials/_Header" model="@Model" />
<div class="container" id="scrollTo">
    <h1>Create</h1>

    <h4>Route</h4>
    <hr />
    <div class="row" >
        <div class="col-lg-6">
            <form asp-action="Create">
                <partial name="_Partials/_CreateEditForm" model="@Model" />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary red-button" />
                    <a class="btn btn-secondary grey-button" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
        <div id="map" class="col-lg-6 gx-5" style="float:left"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script async type="text/javascript" src='https://maps.googleapis.com/maps/api/js?key=@apiKey&libraries=places,geometry&callback=createRoute'></script>
    <script>
        $(document).ready(function() {
            $('html, body').animate({
                scrollTop: $("#scrollTo").offset().top
            }, 1);
        });
    </script>
}
