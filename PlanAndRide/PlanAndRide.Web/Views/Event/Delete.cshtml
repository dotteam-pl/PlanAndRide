@model EventDto

@{
    ViewData["Title"] = "Delete";
}
<partial name="_Partials/_Header" model="@Model" />
<div class="container">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this event?</h3>
    <div>
        <hr />
        <dl class="row" id="scrollTo">
            <dt class="col-sm-2">
                @if (Model.IsPrivate)
                {
                    <i class="fa-solid fa-lock"></i>

                    <span>Private</span>
                }
                else
                {
                    <i class="fa-solid fa-lock-open"></i>

                    <span>Public</span>
                }
            </dt>
            <dd></dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Model.Date.ToString("dd MMM yyyy hh:mm")
            </dd>
            <dt class="col-sm-2">
                Route Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RouteName)
            </dd>
            @if (!String.IsNullOrEmpty(Model.Description))
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            }
        </dl>

        <form asp-action="Delete">
            <input type="submit" value="Delete" class="btn btn-danger red-button" />
            <a class="btn btn-secondary grey-button" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>

@section scripts
    {
    <script>
        $(document).ready(function() {
            $('html, body').animate({
                scrollTop: $("#scrollTo").offset().top
            }, 1);
        });
    </script>
                }