@model EventDto

@{
    ViewData["Title"] = "Unjoin";
}
<partial name="_Partials/_Header" model="@Model" />
<div class="container">
    <br />
    <div>
        <h4>Are you sure you want to unjoin this ride?</h4>
        <hr />
        <dl class="row" id="scrollTo">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Date)
            </dd>
        </dl>
    </div>
    <div>
        <form asp-action="Unjoin" asp-route-id="@Model.Id">
            <input type="submit" value="Yes" class="btn btn-danger red-button" />
            <a class="btn btn-secondary grey-button" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
        </form>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function() {
            $('html, body').animate({
                scrollTop: $("#scrollTo").offset().top
            }, 1);
        });
    </script>
}
