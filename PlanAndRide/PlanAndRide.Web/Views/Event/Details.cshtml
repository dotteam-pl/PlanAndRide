@model EventViewModel

@{
    ViewData["Title"] = "Details";
    var privacyDisplay = "[Private]";
    if (!Model.IsPrivate)
    {
        privacyDisplay = "[Public]";
    }
}
<div class="container"> 
<h4>Event details</h4>
<h6>@privacyDisplay</h6>
<div>
    @*<h4>Event</h4>*@
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            Route
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RouteName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatusRide)
        </dd>
        @*<dt class = "col-sm-2">
           Share Ride
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShareRide)
        </dd>
        <dt class = "col-sm-2">
            Is Private
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsPrivate)
        </dd>*@
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary red-button" asp-action="Edit" asp-route-id=@Model.Id>Edit</a>
    <a class="btn btn-outline-secondary grey-button" asp-action="Index">Back to events</a>
</div>
</div>