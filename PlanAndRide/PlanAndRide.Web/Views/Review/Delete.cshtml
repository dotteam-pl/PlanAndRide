@model ReviewDto

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <h3>Review route @Model.RouteName</h3>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Score)
        </dt>
        <dd class="col-sm-10">
            <div class="route-rating">
                <input type="hidden" asp-for="@Model.Score" id="rating-value" />            
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-outline-secondary grey-button" asp-controller="Route" asp-action="ManageReviews" asp-route-id="@Model.RouteId">Cancel</a>
    </form>
</div>
@section Scripts{
    <script>
        $('document').ready(showStarRatingForSingleRoute());
    </script>
    
}
